{
    "name": "react-ts-lib",
    "version": "1.0.0",
    "author": "Jose Luis <joseluis.barreche@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "rimraf -rf dist & npm run lint:fix & webpack --env.NODE_ENV=production --config webpack.config.js",
        "build:serve": "npm run build & nodemon server/index.js",
        "serve": "nodemon server/index.js",
        "dev": "webpack-dev-server --colors --progess --jsx --config webpack.config.js",
        "dev:fix": "npm run lint:fix & webpack-dev-server --colors --progess --jsx --config webpack.config.js",
        "lint": "npm run lint:js",
        "lint:js": "eslint --cache --color src --ext .ts,.js,.tsx,.jsx",
        "lint:fix": "npm run lint:js:fix",
        "lint:js:fix": "eslint --cache --color src --ext .ts,.js,.tsx,.jsx --fix"
    },
    "devDependencies": {
        "@babel/core": "^7.5.5",
        "@babel/preset-env": "^7.5.5",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.3.3",
        "@types/webpack-env": "^1.14.0",
        "@typescript-eslint/eslint-plugin": "^1.13.0",
        "@typescript-eslint/parser": "^1.13.0",
        "autoprefixer": "^9.6.1",
        "babel-eslint": "^10.0.2",
        "babel-loader": "^8.0.6",
        "css-loader": "^2.1.1",
        "cssnano": "^4.1.10",
        "eslint": "^5.16.0",
        "eslint-config-airbnb": "^17.1.1",
        "eslint-config-prettier": "^6.0.0",
        "eslint-loader": "^2.2.1",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.14.3",
        "file-loader": "^4.2.0",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^1.3.1",
        "imagemin": "^7.0.0",
        "imagemin-gifsicle": "^6.0.1",
        "imagemin-mozjpeg": "^8.0.0",
        "imagemin-pngquant": "^8.0.0",
        "imagemin-svgo": "^7.0.0",
        "img-loader": "^3.0.1",
        "lint-staged": "^8.2.1",
        "mini-css-extract-plugin": "^0.8.0",
        "node-sass": "^4.12.0",
        "open": "^6.4.0",
        "optimize-css-assets-webpack-plugin": "^5.0.3",
        "postcss-loader": "^3.0.0",
        "prettier": "^1.18.2",
        "react-hot-loader": "^4.12.11",
        "sass-loader": "^7.2.0",
        "style-loader": "^0.23.1",
        "terser-webpack-plugin": "^1.4.1",
        "ts-loader": "^6.0.4",
        "url-loader": "^2.1.0",
        "webpack": "^4.39.2",
        "webpack-cli": "^3.3.6",
        "webpack-dev-server": "^3.8.0",
        "webpack-merge": "^4.2.1"
    },
    "dependencies": {
        "@types/react": "^16.9.1",
        "@types/react-dom": "^16.8.5",
        "react": "^16.9.0",
        "react-dom": "^16.9.0",
        "typescript": "^3.5.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.(j|t)s?(x)": [
            "npm run lint:js:fix",
            "git add"
        ],
        "test/**/*.(j|t)s?(x)": [
            "npm run lint:js:fix",
            "git add"
        ]
    },
    "autoprefixer": {
        "browsers": [
            "last 2 versions",
            "iOS >= 8"
        ]
    }
}
