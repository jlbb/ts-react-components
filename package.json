{
  "name": "react-ts-lib",
  "version": "1.0.0",
  "author": "Jose Luis <joseluis.barreche@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "webpack --env.NODE_ENV=production --config webpack.config.js",
    "dev": "webpack-dev-server --colors --progess --config webpack.config.js",
    "lint": "npm run lint:js",
    "lint:js": "eslint --cache --color src --ext .jsx --ext .js",
    "lint:fix": "npm run lint:js:fix",
    "lint:js:fix": "eslint --cache --color src --ext .jsx --ext .js --fix",
    "serve": "npm run lint:fix & npm run build & nodemon server/index.js"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.0",
    "eslint": "^5.13.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "open": "^6.4.0",
    "react-hot-loader": "^4.6.5",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint:js -- --fix",
      "git add"
    ],
    "test/**/*.js": [
      "npm run lint:js -- --fix",
      "git add"
    ]
  }
}
